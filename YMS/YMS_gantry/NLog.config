<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log">

    <targets>
        <target name="appLog"
                xsi:type="File"
                fileName="${specialfolder:folder=ApplicationData}/Fresco/YMS/Gantry/logs/app.log"
                archiveFileName="${specialfolder:folder=ApplicationData}/Fresco/YMS/Gantry/logs/archive/app_{#}.log"
                archiveEvery="Day"
                archiveNumbering="Date"
                layout="${longdate} [${uppercase:${level}}] ${message}"
                maxArchiveFiles="30"/>
    </targets>

    <rules>
        <logger name="*" minlevel="Info" writeTo="appLog"/>
    </rules>
</nlog>
